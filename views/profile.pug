extends layout

block content
	if (user)
		h1 User Profile
		dl
			if(user.username)
				dt User Name:&nbsp;&nbsp;
				dd #{user.username}
			if (user.email)
				dt Email:&nbsp;&nbsp;
				dd #{user.email}
			if (user.avatar)
				dt Avatar:&nbsp;&nbsp;
				dd
					img(src=user.avatar)
	else
		h1 Please login to view profile page
