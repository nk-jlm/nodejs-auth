extends layout

block content
	.container
		form.form-signin.col-md-2.col-sm-3.text-center(action="/auth/signIn",method="post", style='max-width: 300px;')
			h2.form-signin-heading Sign In
			input.form-control(type='text', required name="username", placeholder='Your Username')
			input.form-control(type='password', required name="password", placeholder='Your Password')
			button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign In
			button.btn.btn-lg.btn-primary.btn-block
				a(href='/auth/instagram') Login using Instagram
			button.btn.btn-lg.btn-primary.btn-block
				a(href='/auth/forgot') Forgot Password?
