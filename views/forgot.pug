extends layout

block content
	.container
		form.form-signin.col-md-2.col-sm-3.text-center(action="/auth/forgot", method="post", style='max-width: 300px;')
			.form-group
				h2.form-signin-heading Please fill email
				label(for='email') Email
				input.form-control(type='text', name='email', autofocus)
			button.btn.btn-primary(type='submit') Reset Password
